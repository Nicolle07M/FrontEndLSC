<script>
  let lastScrollY = 0;

  if (typeof window !== "undefined") {
    const handleScroll = () => {
      const header = document.querySelector('header');
      if (!header) return;

      if (window.scrollY > lastScrollY) {
        // Scroll hacia abajo: ocultar header
        header.classList.add('-translate-y-[300px]');
        header.classList.remove( 'border', 'border-white');
      } else {
        // Scroll hacia arriba: mostrar header con borde blanco e iluminación
        header.classList.remove('-translate-y-[300px]');
        header.classList.add( 'border', 'border-white');

        
      }

      lastScrollY = window.scrollY;
    };

    window.addEventListener('scroll', handleScroll);
  }
</script>

<header class="fixed w-[1787px] rounded-xl bg-[#000000] bg-opacity-45 shadow-md mt-5 ml-10 transition-transform duration-300 ease-in-out z-50">
